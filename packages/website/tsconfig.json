{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"lib": ["ESNext", "DOM", "DOM.Iterable"],
		"isolatedModules": true,
		"jsx": "preserve",
		"baseUrl": ".",
		"allowJs": false,
		"noEmit": true,
		"incremental": true,
		"skipLibCheck": true,
		"paths": {
			"~/*": ["./src/*"]
		}
	},
	"include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.mts", "next-env.d.ts", "types.d.ts", "src/index.ts"],
	"exclude": ["node_modules"]
}
